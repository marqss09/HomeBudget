<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#228B22"
    >

    <!-- Nagłówek -->
    <TextView
        android:id="@+id/zaklady"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zaklady"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>


    <EditText
        android:id="@+id/wynikmeczu"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:hint="Podaj wynik meczu"
        android:visibility="visible"/>
    />

    <!-- Tabela 4x4 -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Wiersz 1 -->
        <TableRow
            android:id="@+id/tabela"
            android:visibility="visible">

            <TextView
                android:id="@+id/druzyna1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="8dp"
                android:text="Polska"/>

            <TextView
                android:id="@+id/wynik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:padding="8dp"
                android:text=""/>
            <TextView
                android:id="@+id/druzyna2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="8dp"
                android:text="Holandia"/>
        </TableRow>

        <Button
            android:id="@+id/wyslijwynik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wyslij wynik"
            />

    </TableLayout>



</LinearLayout>